<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="bottom|center_horizontal|center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/toplama"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:gravity="right"
        android:hint="0"
        android:textSize="32dp" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:gravity="right"
        android:hint="0"
        android:textSize="64dp" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="445dp"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/buttonC"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="5" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="9"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="6" />

        <Button
            android:id="@+id/buttoncarpi"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="*"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="6" />

        <Button
            android:id="@+id/buttonbolu"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="/"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttonyuzde"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="%"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="5" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="8"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="6" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="1"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="8" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="7"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="6" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="5"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="7" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="6"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="7" />

        <Button
            android:id="@+id/buttonarti"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="7" />

        <Button
            android:id="@+id/buttonbos"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="+/-"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="9" />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonvirgul"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="."
            android:textSize="30sp" />

        <Button
            android:id="@+id/buttonsil"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="->"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="5" />

        <Button
            android:id="@+id/buttoneksi"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="8" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="4"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_row="7" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="2"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_row="8" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@drawable/butrengi"
            android:text="3"
            android:textSize="30sp"
            app:layout_column="2"
            app:layout_row="8" />

        <Button
            android:id="@+id/buttonesit"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_margin="4sp"
            android:background="@color/black"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_column="3"
            app:layout_row="9" />
    </androidx.gridlayout.widget.GridLayout>

</LinearLayout>